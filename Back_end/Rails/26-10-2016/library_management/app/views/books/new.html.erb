<h2>Enter the book details</h2>

<%= form_for :book do |f| %>
  <p>
    <%= f.label :book_name %><br>
    <%= f.text_field :book_name %>
  </p>
 
  <p>
    <%= f.label :author%><br>
    <%= f.text_field :author %>
  </p>

  <p>
  <%= f.label :publication%><br>
  <%= f.text_field :publication %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'available books', books_list_path %>
